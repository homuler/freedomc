.axis {
    path, line {
        fill: none;
        stroke: #000;
        shape-rendering: crispEdges;
    }
}

.x.axis path {
    display: none;
}

.line {
    fill: none;
    stroke: steelblue;
    stroke-width: 3px;
}

.d3tip {
    border: 1px solid black;
    background-color: white;
    padding: 5px;
    border-radius: 4px;
    -webkit-border-radius: 4px;
    -moz-border-radius: 4px;
}